<%- include('partials/header') %> 
    <h1 class="text-center"> add page  </h1>
    <form method="POST" action='/<%= article._id %>/edit?_method=PUT' class="my 5"> 
        <div class="form-group">
          <label for="">Title</label>
          <input type="text"
            class="form-control" name="title" value="<%= article.title %>">
        </div>
        <div class="form-group">
          <label for="">Author</label>
          <input type="text"
            class="form-control" name="author" value="<%= article.author %>">
        </div>
        <div class="form-group">
          <label for="">Body</label>
          <textarea class="form-control" name="body" id="" rows="3"><%= article.body %></textarea>
        </div>
        <button type="submit" class="btn btn-primary">Edit</button>
    </form>
<%- include('partials/footer') %>
